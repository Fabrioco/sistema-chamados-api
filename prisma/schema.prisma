generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

enum UserRole {
    USER
    ADMIN
}

model User {
    id       String   @id @default(cuid())
    name     String
    email    String   @unique
    password String
    role     UserRole     @default(USER)

    @@map("users")
}

model Ticket {
    id          String   @id @default(cuid())
    title       String
    description String
    userId      String
    category    String
    priority    TicketPriority
    status      TicketStatus

    @@map("tickets")
}

enum TicketPriority {
    LOW
    MEDIUM
    HIGH
}

enum TicketStatus {
    OPEN
    CLOSED
}

